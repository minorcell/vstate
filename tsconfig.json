{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "vstate": ["packages/vstate/src"]
    }
  },
  "include": ["packages/**/*.ts", "packages/**/*.vue", "packages/vstate/tsconfig.json"]
}
